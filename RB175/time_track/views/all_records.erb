<h2>Records</h2>
<% if @records.empty? %>
  <p>There are no entries. <a href="/live_track/new">Click here</a> to start recording.</p>
<% end %>

<ul id="records">
  <% @records.each do |record| %>
    <li><b>Project: <%= record[:project] %></b></li>
    <li>Task: <%= record[:task] %></li>
    <li>Rate: $<%= record[:rate] %></li>
    <li>Start Time: <%= record[:starttime] %></li>
    <li>End Time: <%= record[:endtime] %></li>
    <p>
      <% if record[:endtime].nil? %>
        <form method="get" action="/live_track/<%= record[:id] %>/end"><a href="/live_track/<%= record[:id] %>/end">End tracking</a></form><p>
      <% end %>
    <form method="post" action="/all_records/<%= record[:id] %>/delete" class="delete"><button type="submit">Delete task</button>
    </form>  
    <p>
<% end %>
</ul>

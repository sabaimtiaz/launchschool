<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <form action="/lists/<%= params[:id] %>/delete" method="post">
        <button type="submit" class="delete">Delete List</button>
      </form>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>
